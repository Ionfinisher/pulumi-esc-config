{
  "name": "pulumi-esc-config",
  "version": "1.0.0",
  "description": "esc-config a CLI tool that fetches secrets and configurations from Pulumi ESC and generates configuration files in various formats, with additional features to enhance usability and security.",
  "main": "./lib/index.js",
  "bin": {
    "esc-config": "./lib/index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/index.ts",
    "create": "npm run build &amp;&amp",
    "build": "tsc -p .",
    "local": "sudo npm i -g &amp;&amp; esc-config",
    "test": "echo \"Error: no test specified\" &amp;&amp; exit 1",
    "refresh": "rm -rf ./node_modules ./package-lock.json &amp;&amp; npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ionfinisher/pulumi-esc-config.git"
  },
  "keywords": [
    "pulumi",
    "esc",
    "config"
  ],
  "author": "Teddy ASSIH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ionfinisher/pulumi-esc-config/issues"
  },
  "homepage": "https://github.com/Ionfinisher/pulumi-esc-config#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^13.1.0",
    "figlet": "^1.8.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
